import random

def print_board(board):
    print("\n")
    for row in board:
        print(" | ".join(row))
        print("-" * 9)
    print("\n")


def check_winner(board, player):
    # Check rows
    for row in board:
        if all(cell == player for cell in row):
            return True

    # Check columns
    for col in range(3):
        if all(board[row][col] == player for row in range(3)):
            return True

    # Check diagonals
    if all(board[i][i] == player for i in range(3)):
        return True
    if all(board[i][2 - i] == player for i in range(3)):
        return True

    return False


def is_full(board):
    return all(cell != " " for row in board for cell in row)


def get_empty_cells(board):
    return [(r, c) for r in range(3) for c in range(3) if board[r][c] == " "]


def get_computer_move(board):
    # 1. Check if computer can win in next move
    for row, col in get_empty_cells(board):
        board[row][col] = "O"
        if check_winner(board, "O"):
            board[row][col] = " "  # undo after checking
            return (row, col)
        board[row][col] = " "

    # 2. Check if player can win next move, block them
    for row, col in get_empty_cells(board):
        board[row][col] = "X"
        if check_winner(board, "X"):
            board[row][col] = " "  # undo after checking
            return (row, col)
        board[row][col] = " "

    # 3. Otherwise, pick random available spot
    return random.choice(get_empty_cells(board))


def tic_tac_toe():
    board = [[" " for _ in range(3)] for _ in range(3)]

    print("Welcome to Tic Tac Toe!")
    mode = input("Choose mode: 1) Player vs Player  2) Player vs Computer\nEnter 1 or 2: ")

    current_player = "X"
    print_board(board)

    while True:
        try:
            if mode == "2" and current_player == "O":
                print("Computer's turn...")
                row, col = get_computer_move(board)
            else:
                row = int(input(f"Player {current_player}, enter row (0-2): "))
                col = int(input(f"Player {current_player}, enter column (0-2): "))

                if row not in [0, 1, 2] or col not in [0, 1, 2]:
                    print("Invalid input! Choose numbers between 0 and 2.")
                    continue

                if board[row][col] != " ":
                    print("Cell already taken! Try again.")
                    continue

            board[row][col] = current_player
            print_board(board)

            if check_winner(board, current_player):
                if mode == "2" and current_player == "O":
                    print("ðŸ¤– Computer wins! Better luck next time!")
                else:
                    print(f"ðŸŽ‰ Player {current_player} wins! ðŸŽ‰")
                break

            if is_full(board):
                print("It's a draw!")
                break

            # Switch player
            current_player = "O" if current_player == "X" else "X"

        except ValueError:
            print("Please enter valid numbers (0, 1, or 2).")


if __name__ == "__main__":
    tic_tac_toe()
